{
  "name": "ex1_back",
  "version": "1.0.0",
  "description": "ex1 flutter 项目后端服务",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "tsc && tsc-alias",
    "build:prod": "tsc -p tsconfig.prod.json && tsc-alias",
    "build:prodObfuscate": "tsc -p tsconfig.prod.json && tsc-alias && node scripts/obfuscate.js",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:lint": "concurrently \"npm run dev\" \"npm run lint:watch\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "manual-backup": "node scripts/backup-data.cjs",
    "auto-backup": "node scripts/auto-backup-data.cjs",
    "universal-backup": "node scripts/universal-backup-data.cjs",
    "restore": "node scripts/restore-data.cjs",
    "update-schema": "node scripts/update-schema-safely.cjs",
    "prepare": "husky",
    "lint": "eslint src --ext .ts,.js",
    "lint:watch": "eslint src --ext .ts,.js --watch",
    "lint:check": "eslint src --ext .ts,.js --format unix",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "lint:info": "eslint src --ext .ts,.js --max-warnings=0 --quiet",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "quality": "npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "pm2:start": "pm2 start dist/index.js --name ex1-api",
    "pm2:stop": "pm2 stop ex1-api",
    "pm2:restart": "pm2 restart ex1-api"
  },
  "repository": {
    "type": "git",
    "url": "git@gittx:ex1_back.git"
  },
  "dependencies": {
    "@alicloud/credentials": "^2.4.4",
    "@alicloud/dypnsapi20170525": "^2.0.0",
    "@alicloud/dysmsapi20170525": "^4.3.1",
    "@alicloud/openapi-client": "^0.4.15",
    "@alicloud/tea-typescript": "^1.8.0",
    "@alicloud/tea-util": "^1.4.11",
    "@prisma/client": "^6.6.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cos-nodejs-sdk-v5": "^2.15.4",
    "dotenv": "^17.2.1",
    "express": "^5.2.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "prisma": "^6.6.0",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/javascript-obfuscator": "^0.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "javascript-obfuscator": "^5.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "volta": {
    "node": "25.2.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "author": "xmm",
  "license": "ISC"
}
